{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Queryoont.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Queryoont.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Queryoont.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-c",
                "Release",
                "${workspaceFolder}/Queryoont.csproj",
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "pack",
            "command": "nuget",
            "type": "process",
            "args": [
                "pack",
                "${workspaceFolder}/Queryoont.nuspec",
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "release"
            ],
        },
        {
            "label": "github",
            "command": "nuget",
            "type": "process",
            "args": [
                "push",
                "-Source",
                "GitHub",
                "-ApiKey",
                "${input:key}",
                "${workspaceFolder}/Queryoont.${input:nupkg}.nupkg",
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "pack"
            ]
        }
    ],
    "inputs": [
        {
            "id": "nupkg",
            "description": "nupkg version:",
            "default": "1.0.0",
            "type": "promptString"
        },
        {
            "id": "key",
            "description": "key:",
            "default": "",
            "type": "promptString"
        },
    ]
}